<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1b262c"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_weight="0.4">

       <TextView
           android:id="@+id/display"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:textAlignment="textEnd"
           android:textColor="#ffa372"
           android:textSize="40sp"
           android:textStyle="bold"
           android:layout_marginTop="190dp"
           android:layout_marginBottom="0dp"
           android:layout_marginRight="15dp"
           android:cursorVisible="true"/>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <Button
            android:id="@+id/del_btn"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_margin="10dp"
            android:layout_weight="0.25"
            android:background="@drawable/rounded_del_button"
            android:onClick="del"
            android:text="DEL"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.75"
            android:background="@drawable/rounded_operations"
            android:text="+"
            android:textColor="#1b262c"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="plus"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <Button
            android:id="@+id/number_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_numbers"
            android:text="7"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="number7"/>

        <Button
            android:id="@+id/number_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_numbers"
            android:text="8"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="number8"/>

        <Button
            android:id="@+id/number_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_numbers"
            android:text="9"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="number9"/>

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_operations"
            android:text="-"
            android:textColor="#1b262c"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="minus"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <Button
            android:id="@+id/number_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_numbers"
            android:text="4"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="number4"/>

        <Button
            android:id="@+id/number_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_numbers"
            android:text="5"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="number5"/>

        <Button
            android:id="@+id/number_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_numbers"
            android:text="6"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="number6"/>

        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_operations"
            android:text="/"
            android:textColor="#1b262c"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="division"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <Button
            android:id="@+id/number_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_numbers"
            android:text="1"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="number1"/>

        <Button
            android:id="@+id/number_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_numbers"
            android:text="2"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="number2"/>

        <Button
            android:id="@+id/number_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_numbers"
            android:text="3"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="number3"/>

        <Button
            android:id="@+id/multiplication"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_operations"
            android:text="*"
            android:textColor="#1b262c"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="multiplication"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <Button
            android:id="@+id/number_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.25"
            android:background="@drawable/rounded_numbers"
            android:text="0"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="number0"/>

        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.25"
            android:background="@drawable/rounded_numbers"
            android:text="."
            android:textColor="#ffa372"
            android:textSize="50sp"
            android:textStyle="bold"
            android:onClick="point"/>


        <Button
            android:id="@+id/paranth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.25"
            android:background="@drawable/rounded_numbers"
            android:onClick="paranth"
            android:text="()"
            android:textColor="#ffa372"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.25"
            android:background="@drawable/rounded_del_button"
            android:text="="
            android:textSize="36sp"
            android:textStyle="bold"
            android:onClick="equal" />
    </LinearLayout>


</LinearLayout>